<h2>User info</h2>
  <%= render 'users/user', user: @user %>

<h1>New Book</h1>

<%= render 'books/book', book: @newbook %>


<h1>Books</h1>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>



   <% @books.each do |book| %>


    <tr>
    <td>
      <p>
      <%= link_to book_path(book.id) do %>
       <%= book.title %>
       <% end %>
     </p>
    </td>
    
    <td><p><%= book.body %></p></td>
    </tr>

   <% end %>


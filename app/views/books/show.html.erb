<div class="container mt-3">
    <div class="row">
      <div class="col-3 mt-3">
        <%= render 'users/user', user: @user %>
        <%= render 'books/book', book: @book %>
     </div>


<div class="col-8 offset-md-1 mt-3">

 <h2>Book detail</h2>

 <table class='table'>
 <tr>

  <td>
    <%= link_to user_path(@book.user) do %>
     <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>
     <%= @book.user.name %>
    <% end %>
  </td>
  <td>
    <%= @book.title %>
  </td>
  <td>
    <%= @book.body %>
  </td>

  <td>
    <%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success" %>

  </td>
  <td>
    <%= link_to "Destroy", book_path(@book), method: :delete, data:{confirm: "本当に消しますか？"}, class:"btn btn-sm btn-danger" %>

  </td>



 </tr>
 </table>
 </div>

</div>
</div>
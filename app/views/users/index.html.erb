<h2>Users</h2>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>image</th>
       
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @users.each do |user| %>
     <tr>

      <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>

      <td><%= @user.name %></td>

    </tr>
    <% end %>
 </tbody>
</table>